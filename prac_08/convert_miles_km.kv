BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34' # Default value
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                on_press: app.handle_increment(-1)
    BoxLayout:
        Button:
            text: 'Convert miles to km'
            on_press: app.handle_conversion()
    BoxLayout:
        Label:
            id: output_label
            text: app.output_km  # Bind to the StringProperty
            font_size: 48
            color: (1,1,0,1)